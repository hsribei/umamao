!!! Strict
%html{ "xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      &= page_title

    = include_stylesheets :landing, :media => 'all'

    = render :partial => "shared/layout/meta"
    <!--[if lt IE 8]><link type="text/css" rel="stylesheet" media="screen" href="/stylesheets/ie7.css"><![endif]-->
    = include_javascripts :base
    = yield :js

  %body.bp
    #container
      #header
        = link_to image_tag("default_logo.png", :class => "group_logo", :width => 150, :height => 75), domain_url(:custom => current_group.domain)
        = yield :header

      %hr#colruler



      = yield

      .push

    = render :partial => 'layouts/footer'

    = render :partial => "shared/analytics"

